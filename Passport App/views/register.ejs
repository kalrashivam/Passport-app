<%- include('includes/header') %>

 <div class= "container">
     <% if (locals.errors) { %>
        <% errors.forEach(function(error){ %>
            <div class="alert alert-danger"><%= error.msg %></div>
        <% }) %>
    <% } %>
  <div class="row">
  <div class="col-md-4"></div>

   	<form method="post" action="/users/register" class="col-md-4 card card-container" style="background:  #7b9095;margin-top:60px">
   		<h1 align ="center">User Login </h1>
   		<div class ="form-group">
   			<input type="text" name="name"  value="<%= (!!locals.name)?name:'' %>" class="form-control" placeholder="Enter name" autofocus required>
   		</div>
   		<div class ="form-group">
   			<input type="text" name="username" class="form-control"  value="<%= (!!locals.username)?username:'' %>"placeholder="Enter Username" autofocus >
   		</div>
   		<div class ="form-group">
   			<input type="password" name="password" class="form-control" placeholder="Enter Password" required>
   		</div>
   		<div class ="form-group">
   			<input type="password" name="password2" class="form-control" placeholder="Confirm Password" required>
   		</div>
   		<div class="form-group">
   			<p>Have Account? <a href="/users/login">Login</a></p>
   		</div>	
   		<div class="form-group">
   			<button type="submit" class="btn btn-primary btn-block">Submit</button>
   		</div>
   	</form>	
   </div>
 </div>


<%- include('includes/footer') %>